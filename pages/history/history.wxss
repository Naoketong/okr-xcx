.title{
	font-size: 12px;
  color: #999;
  margin-bottom: 10px;
}
.todo-item{
	position: relative;
	background-color: #f5f5f5;
	padding:10px;
	margin-bottom: 5px;
	overflow: hidden;
}
.todo-item.accomplish:after{
	position: absolute;
	top: -20px;
	right: -20px;
	transform: rotate(-45deg);
	width: 80px;
	height: 80px;
	border:2px solid #ff6700;	
	content: '完成';
	line-height: 78px;
	text-align: center;
	font-size: 22px;
	color: #ff6700;
	border-radius: 50%;
	opacity: .5;

}

.item-title{
	font-size: 14px;
	line-height: 20px;
	color: #333;
	margin-bottom: 4px;
}

.item-created_time{
  font-size: 12px;
  color: #999;
}
.item-created_time span{
	color: #ff6700;
}