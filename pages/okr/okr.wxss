.todo-link{
	height: 40px;
	line-height: 40px;
	background-color: #666;
	font-size: 18px;
	color: #fff;
	text-align: center;
	margin-bottom: 10px;
}

.okr-item{
	position: relative;
	background-color: #f5f5f5;
	padding:10px;
	margin-bottom: 5px;
	overflow: hidden;
}


.okr-item.accomplish:after{
  position: absolute;
  top: -20px;
  right: -20px;
  width: 80px;
  height: 80px;
  border: 2px solid #999;
  content: '完成';
  line-height: 78px;
  text-align: center;
  font-size: 22px;
  color: #999;
  border-radius: 50%;
  opacity: .4;
  transform: rotate(-45deg);
}

.item-title{
  font-size: 14px;
  line-height: 20px;
  color: #333;
  margin-bottom: 4px;
}

.item-created_time{
  font-size: 12px;
  color: #999;
}