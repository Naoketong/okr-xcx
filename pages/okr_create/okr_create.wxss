.container{
	display: flex;
	flex-direction: column;

}
.form{
  flex: 1;
}

.form-item{
  position: relative;
  margin-bottom: 10px;
  padding-right: 60px;
}

.form-title{
  color: #ff6700;
  font-size: 12px;
  line-height: 20px;
}

.form-input{
  display: block;
  width: 100%;
  height: 40px;
  border: 1px solid #333;
  padding: 0 8px;
  font-size: 16px;
  line-height: 38px;
}

.form-ctrl{
  position: absolute;
  top: 20px;
  right: 0;
  display: inline-block;
  width: 40px;
  height: 40px;
  text-align: center;
  color: #fff;
  line-height: 40px;
  font-size: 18px;
  background: #ff6700;
}
.form-ctrl_hover{
  opacity: .8;
}

.submit-btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6700;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
}

.submit-btn_hover{
  opacity: .8;
}